#!/usr/bin/env sh
WINDOW_PATTERN="Meet â€“" 
if [ "$1" = '--mic' ]
then
    COMMAND="Ctrl+d"
elif [ "$1" = '--camera' ]
then
    COMMAND="Ctrl+e"
else
    echo "Usage: ${0} [--mic|--camera]"
    exit 1
fi
xdotool search --name "${WINDOW_PATTERN}" windowactivate && sleep 0.2 && xdotool key "${COMMAND}"
